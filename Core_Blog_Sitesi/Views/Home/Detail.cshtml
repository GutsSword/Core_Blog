

@model ArticleDto

<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                    <img src="~/images/@Model.Image.FileName" alt="">
                                    </div>
                                    <div class="down-content">
                                        <h4 style="color:darkorange">@Model.Title</h4>
                                        <ul class="post-info">
                                        <li>@Model.User.FirstName @Model.User.LastName</li>
                                        <li>@Model.CreatedDate.ToString("dd/MM/yyyy")</li>
                                        <li><i class="fa fa-eye" aria-hidden="true"></i> @Model.ViewCount</li>
                                        </ul>
                                    <p>@Model.Content</p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                    <li>@Model.Category.Name</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>