@model UserUpdateDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcılar /</span>Kullanıcı Güncelleme Sayfası</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Kullanıcı Güncelleme Formu</h5>

                <form asp-area="Admin" asp-controller="User" asp-action="UpdateUser" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="All" style="color:darkred"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <div>
                            <label class="form-label">Adı</label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="Adı Girin."><br />
                            <span asp-validation-for="FirstName" class="text-danger"></span> <br />
                        </div>
                        <div>
                            <label class="form-label">Soyadı</label>
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Soyadı Girin."><br />
                            <span asp-validation-for="LastName" class="text-danger"></span> <br />
                        </div>
                        <div>
                            <label class="form-label">Mail</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email Girin."><br />
                            <span asp-validation-for="Email" class="text-danger"></span> <br />
                        </div>
                        <div>
                            <label class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Telefonu Girin."><br />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span> <br />
                        </div>
                        <div>
                            <label class="form-label">Kullanıcı Yetkisi</label>
                            <select asp-for="RoleId" class="form-label form-control" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                            <span asp-validation-for="RoleId" class="text-danger"></span> <br />
                        </div>

                        <button type="submit" class="btn btn-primary ">Bilgileri Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>