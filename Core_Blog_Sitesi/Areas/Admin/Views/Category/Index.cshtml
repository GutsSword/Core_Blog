
@model List<CategoryDto>


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yönetimi /</span>Kategoriler</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap">
            <a asp-area="Admin" asp-controller="Category" asp-action="AddCategory" class="btn btn-primary mb-2 mt-3">Kategori Ekle<i class="bx bx-plus"></i> </a> <br />
            <br />
            <table class="table table-hover" id="categoriesTable" witdh="%100" collspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulan Tarih</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulan Tarih</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <td>@category.Name</td>
                            <td>@category.CreatedDate.ToShortDateString()</td>
                            <td>@category.CreatedBy</td>
                            <td>@(category.IsDeleted ? "Pasif" : "Aktif")</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory"
                               asp-route-categoryId="@category.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory"
                               asp-route-categoryId="@category.Id"><i class="bx bx-minus-circle"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
    {
    <script src="~/scripts/javascriptcategoryindex.js" type="application/ecmascript"></script>
}
