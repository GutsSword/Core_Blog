
@model CategoryAddDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategoriler /</span>Kategori Ekleme Sayfası</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Makale Giriş Formu</h5>

                <form asp-area="Admin" asp-controller="Category" asp-action="AddCategory" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                     
                        <div>
                            <label class="form-label">Kategori İsmi</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Kategori İsmi" ><br />
                            <span asp-validation-for="Name" class="text-danger"></span> <br />
                        </div>
                        
                        <button type="submit" class="btn btn-primary ">Kategori Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>