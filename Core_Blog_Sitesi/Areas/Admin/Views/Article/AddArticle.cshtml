@model ArticleAddDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makaleler /</span>Makale Ekleme Sayfası</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Makale Giriş Formu</h5>
                <form asp-area="Admin" asp-controller="Article" asp-action="AddArticle" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <div>
                            <label class="form-label">Kategori</label>
                            <select id="categoryList" class="form-control" asp-for="CategoryID" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
                            <span asp-validation-for="CategoryID" class="text-danger"></span> <br />
                        </div>
                        <div>
                            <label for="defaultFormControlInput" class="form-label">Başlık</label>
                            <input asp-for="Title" type="text" class="form-control" id="defaultFormControlInput" placeholder="Başlık" aria-describedby="defaultFormControlHelp"><br />
                            <span asp-validation-for="Title" class="text-danger"></span> <br />
                        </div>
                        <div>
                            <label for="defaultFormControlInput" class="form-label">İçerik</label>
                            <textarea asp-for="Content" type="text" class="form-control" id="defaultFormControlInput" placeholder="İçerik" aria-describedby="defaultFormControlHelp"><br /></textarea> <br />
                            <span asp-validation-for="Content" class="text-danger"></span> <br />
                        </div>
                        <div>
                            <label for="defaultFormControlInput" class="form-label">Resim Seçin</label>
                            <input asp-for="Photo" type="file" accept="image/*" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp"><br />

                            <span asp-validation-for="Photo" class="text-danger"></span> <br />
                        </div>
                        <button type="submit" class="btn btn-primary ">Makale Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>